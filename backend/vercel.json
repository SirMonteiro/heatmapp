{
  "builds": [
    {
      "src": "heatmapp_backend/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "heatmapp_backend/wsgi.py"
    }
  ],
  "crons": [
    {
      "path": "cron/reset-streaks/",
      "schedule": "0 0 * * *"
    }
  ]
}
